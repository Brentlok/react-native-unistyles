{
  "name": "react-native-unistyles",
  "version": "3.0.0-alpha.1",
  "description": "Level up your React Native StyleSheet",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --passWithNoTests --coverage",
    "tsc": "node_modules/typescript/bin/tsc --noEmit",
    "lint": "biome lint",
    "prepare": "husky && bob build",
    "precommit": "concurrently 'bun tsc' 'bun lint' 'bun test'",
    "release": "release-it"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "cxx",
    "windows",
    "react-native.config.js",
    "react-native-unistyles.podspec",
    "!lib/typescript/examples",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "!**/.*"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "react-native-macos",
    "react-native-windows",
    "react-native-web",
    "react-native-tvos",
    "react-native-visionos",
    "expo"
  ],
  "repository": "https://github.com/jpudysz/react-native-unistyles",
  "author": "Jacek Pudysz <jacekpudysz@gmail.com> (https://github.com/jpudysz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpudysz/react-native-unistyles/issues"
  },
  "homepage": "https://github.com/jpudysz/react-native-unistyles#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/config-conventional": "19.2.2",
    "@react-native/normalize-colors": "0.75.2",
    "@release-it/conventional-changelog": "8.0.1",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.5.12",
    "@types/react": "18.3.4",
    "commitlint": "19.4.0",
    "concurrently": "8.2.2",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "metro-react-native-babel-preset": "0.77.0",
    "nitro-codegen": "0.5.0",
    "react": "18.3.1",
    "react-native": "0.75.2",
    "react-native-builder-bob": "0.30.0",
    "react-native-nitro-modules": "0.5.0",
    "react-native-web": "0.19.12",
    "react-test-renderer": "18.3.1",
    "release-it": "17.6.0",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "@react-native/normalize-colors": "*",
    "react": "*",
    "react-native": "*",
    "react-native-web": "*",
    "typestyle": ">=2.4.0"
  },
  "peerDependenciesMeta": {
    "react-native-web": {
      "optional": true
    },
    "typestyle": {
      "optional": true
    }
  },
  "workspaces": [
    "example",
    "docs"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 20.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/docs/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/cxx/tests"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coverageReporters": [
      "html"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
